<% layout("/layouts/boilerplate") -%>

<body>
    <h3 class="heading offset-3 mt-3">Signup</h3>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/signup" method="post" novalidate class="needs-validation">
                <!-- <label for="title">Enter Titles</label> -->
                <input type="email" name="email" id="title" placeholder="Enter Email id"
                    class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter a correct email
                      </div>

                    <input type="text" name="username" id="title" placeholder="Enter Username"
                    class="form-control" required>

                    <input type="password" name="password" id="title" placeholder="Enter password"
                    class="form-control" required>
                    
                    <button class="btn add-btn">Submit</button>

            </form>
        </div>
    </div>

</body>
